#include <iostream>
using namespace std;
   float area(float alt, float bs){
    
    float area = alt * bs;
    return area;
  }

int main() {
   float altura, base;
   cout<<"Informe o valor da altura do retângulo: "<<endl;
   cin>>altura;
   cout<<"Informe o valor da base do retângulo: "<<endl;
   cin>>base;
  
  cout<<"A área do retângulo é "<< area(altura, base)<<endl;
 return 0;
}
