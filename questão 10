#include <iostream>
using namespace std;

void comparacao(float numero1, float numero2) {
    if (numero1 > numero2) {
        cout << numero1 << " é maior que " << numero2 << endl;
    } else if (numero2 > numero1) {
        cout << numero2 << " é maior que " << numero1 << endl;
    } else {
        cout << "Os dois números são iguais." << endl;
    }
}

int main() {
    float valor1, valor2;

    cout << "Informe o primeiro número: ";
    cin >> valor1;

    cout << "Informe o segundo número: ";
    cin >> valor2;

    comparacao(valor1, valor2);
    
    return 0;
}
