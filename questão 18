#include <iostream>
using namespace std;
  void incrementar (int *p){
      *p = *p + 1;
      cout<<"O valor após a incrementaçao é "<< *p<<endl;
  }

int main() {
    int numero1;
    cout<<"Informe um valor: "<<endl;
    cin>> numero1;
    int ptr = numero1;
    
    incrementar(&ptr);
    return 0;
}
